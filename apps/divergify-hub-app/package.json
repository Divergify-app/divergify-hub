{
  "name": "divergify-hub-app",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "engines": { "node": ">=18" },
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.app.json --noEmit && vite build",
    "test": "vitest run",
    "preview": "vite preview",
    "check": "npm run build",
    "cap:sync": "npm run build && npx cap sync",
    "cap:android": "npm run build && npx cap add android && npx cap sync android",
    "cap:ios": "npm run build && npx cap add ios && npx cap sync ios"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.26.2"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.1.2",
    "@capacitor/core": "^6.1.2",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^2.1.8"
  }
}
